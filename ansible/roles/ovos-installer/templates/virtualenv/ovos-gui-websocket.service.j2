[Unit]
Documentation=https://openvoiceos.github.io/ovos-docker/about/glossary/components/#ovos-gui-messagebus
Description=Open Voice OS - GUI websocket
After=network.target ovos-messagebus.service
Requires=ovos-messagebus.service

[Service]
WorkingDirectory={{ ovos_installer_user_home }}/.venvs/ovos
ExecStart={{ ovos_installer_user_home }}/.venvs/ovos/bin/ovos-gui-service
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s KILL $MAINPID
Restart=on-failure
RestartSec=5s

[Install]
WantedBy=default.target
